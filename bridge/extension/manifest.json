{
  "manifest_version": 3,
  "name": "TradingView Kafka Bridge",
  "version": "1.1",
  "description": "Capture full page screenshots from TradingView and stream via Kafka.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["http://localhost:4000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tradingview.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}