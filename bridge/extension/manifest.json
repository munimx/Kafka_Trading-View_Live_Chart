{
  "manifest_version": 3,
  "name": "Webpage Screenshot Streamer",
  "version": "1.0",
  "description": "Capture webpage screenshots and stream them via Kafka in real-time.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>", "http://localhost:4000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}